            max_x = 'max(' + ','.join(X_range) + ')'
        else:
            max_x = X_range[0]
        cost_func = lambda x : (eval(eval_str)) * eval(max_x)
        
        x0 = [self.mintasks]*4
        
        #机时最少方案
        solution = minimize(cost_func, x0, method = 'SLSQP', bounds = bnds, constraints = constraints)
